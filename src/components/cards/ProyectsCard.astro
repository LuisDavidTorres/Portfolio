---
interface props {
  title: string;
  role: string;
  description: string;
  image: string;
}

const { title, role, description, image } = Astro.props;
---

<div class="mb-10 last:mb-0 flex flex-col">
  <section>
    <h1 class="text-gray-100">{title}</h1>
    <p class="text-white">{role}</p>
  </section>
  <section class="flex flex-col xl:flex-row mt-5 items-center md:items-start">
    <p class="text-gray-300 opacity-90">{description}</p>
    <img
      src={image}
      width="300px"
      alt={image}
      class="relative z-0 rounded-lg transition-all duration-300 hover:scale-110 hover:cursor-pointer mt-4 sm:mt-0"
    />
  </section>
</div>
