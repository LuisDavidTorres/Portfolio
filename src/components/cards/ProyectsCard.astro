---
import BadgeProjects from "../badges/BadgeProjects.astro";

interface props {
  title: string;
  role: string;
  description: string;
  image: string;
  technologies : {
    id: number
    name: string
  }
}

const { title, role, description, image, technologies } = Astro.props;
---

<div class="mb-10 last:mb-0 flex flex-col">
  <section>
    <h1 class="font-bold">{title}</h1>
  </section>
  <section class="flex flex-col md:flex-row mt-5 items-center md:items-start md:space-x-5">
    <p class="text-gray-300 opacity-90 mb-4">{description}</p>
    <img
      src={image}
      width="300px"
      alt={image}
      class="relative z-0 rounded-lg transition-all duration-300 hover:scale-110 hover:cursor-pointer mt-4 sm:mt-0"
    />
    <!-- {technologies.map((technology: any) => (<BadgeProjects>{technology.name}</BadgeProjects>))} -->
  </section>
</div>
